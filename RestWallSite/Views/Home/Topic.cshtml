@using RestWallSite.Models;

@{
    ViewData["Title"] = "Overview of Boards";
}

@model BoardViewModel
@*@if (Model.Messages != null)
    {*@

    <div class="category-list">
        <div class="b-categories-columned" style="text-align:center; ">
            <a href="/boards/@Model.CurrentBoard.Id" id="ember127" class="d-link b-category has-description ember-view">
                <div class="category-information">
                    <h6 class="heading" style="color:darkgoldenrod">Back to Topics</h6>
                </div>
            </a>
            
        </div>
    </div>

    <div class="category-list">
        @*style="width: 1100px !important;"*@
        <div class="" style="box-sizing: border-box;padding: 1em;border: solid 1px rgba(221,221,221,0.15);background-color: rgba(221,221,221,0.05);">
            <div class="category-icon" style="float:left; margin-right:25px">

                <img width="50" height="50" src="~/images/wow-helmet.png" />
            </div>
            <strong style="color:aliceblue">@Model.CurrentTopic.Title</strong><br />
            <b>
                <small style="color:#808080">
                    [#123 posts] [<a href="#">Username</a>] [@Model.CurrentTopic.CreatedOn]
                    <div style="float:right">
                        [<a href="#">Report Post</a>] [<a href="#">Follow Post</a>] [<a href="#">Save for Later</a>]
                    </div>
                </small>
            </b>
            <p style="padding:25px; font-size:14px;">@Model.CurrentTopic.Text</p>
        </div>
    </div>

<div class="category-list">
    <div class="b-categories-columned" style="text-align:center; ">
            <a href="/boards/@Model.CurrentBoard.Id/topics/@Model.CurrentTopic.Id/createreply" id="ember127" class="d-link b-category has-description ember-view">
                <div class="category-information">
                    <h6 class="heading" style="color:darkgoldenrod">Add Reply</h6>
                </div>
            </a>
    </div>
</div>

@if (Model.Messages.Any())
{
    <div class="category-list" style="">
        <div class="" style="box-sizing: border-box;padding: 1em;border: solid 1px rgba(221,221,221,0.15);background-color: rgba(221,221,221,0.05);">
            @foreach (var item in Model.Messages)
            {
                <div class="category-icon" style="float:left; margin-right:25px">

                    <img width="50" height="50" src="~/images/wow-achievements.png"/>
                </div>
                <strong style="color:aliceblue">@item.Title</strong><br />
                <b>
                    <small style="color:#808080">
                        [#123 posts] [<a href="#">Username</a>] [@item.CreatedOn]
                        <div style="float:right">
                            [<a href="#">Report Post</a>] [<a href="#">Follow Post</a>] [<a href="#">Save for Later</a>]
                        </div>
                    </small>
                </b>
                <p style="padding:25px; font-size:14px;">@item.Text</p>
            }
        </div>

    </div>
}
else
{
    <div class="category-list">
        <div class="" style="box-sizing: border-box;padding: 1em;border: solid 1px rgba(221,221,221,0.15);background-color: rgba(221,221,221,0.05);">

            <b>No replies yet.</b>

        </div>

    </div>
}

<div class="category-list">
    <div class="b-categories-columned" style="text-align:center; ">
        @*boards/{boardId}/topics/{topicId}/createreply*@

        <a href="/boards/@Model.CurrentBoard.Id/topics/@Model.CurrentTopic.Id/createreply" id="ember127" class="d-link b-category has-description ember-view">
            <div class="category-information">
                <h6 class="heading" style="color:darkgoldenrod">Add Reply</h6>
            </div>
        </a>
    </div>
</div>